<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_scrollview"
    android:orientation="vertical"
    android:background="#F4F6F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:textColor="#3565EE"
        android:hint="TITLE"
        android:id="@+id/etEventTitle"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="DESCRIPTION"
        android:textSize="22dp"
        android:id="@+id/etEventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            
            android:text="All Day"
            android:id="@+id/tvEventAllDay"
            android:textSize="22dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <Switch
            android:id="@+id/switchEventTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="55dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="  " />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvEventStartTime"
            android:text="July 11(Mon)"
            android:textSize="22dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:text="13:00"
            android:id="@+id/tvEventStartTime2"
            android:layout_width="0dp"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="95dp"
            android:layout_height="wrap_content" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvEventEndTime"
            android:text="July 11(Mon)"
            android:textSize="22dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:text="13:00"
            android:id="@+id/tvEventEndTime2"
            android:layout_width="0dp"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="95dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:paddingTop="28dp"
        android:text="10 minutes before"
        android:textSize="22dp"
        android:id="@+id/tvEventReminder"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content" />


    <TextView
        android:paddingTop="28dp"
        android:text="Event Type"
        android:textSize="23dp"
        android:id="@+id/tvEventRegular"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingTop="18dp"
        android:paddingLeft="10dp"
        android:id="@+id/tvAddEvent"
        android:text="ADD"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

